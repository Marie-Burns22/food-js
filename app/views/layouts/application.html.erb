<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= javascript_include_tag "application" %>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">


    <%= stylesheet_link_tag "application" %>

    <title>Food Emissions</title>
  </head>

  <body>
    <div class="jumbotron-fluid jumbotron">
      <h1 class="display-8 text-center text-info">Carbon Emissions From Food</h1>
    </div>
    <nav class="navbar sticky-top navbar-expand-sm navbar-light bg-info" style="background: #1cAD66">
      <a class="navbar-brand pl-4 ml-4" id="all-foods" href="<%= foods_path %>">Food Emissions Log</a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#links">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="links">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="<%= root_path %>">About</a>
          <% if !logged_in? %>
            <a class="nav-item nav-link" href="<%= login_path %>">Login</a>
            <a class="nav-item nav-link" href="<%= new_student_path %>">Signup</a>
          <% else %>
            <a class="nav-item nav-link" href="<%= logout_path  %>">Logout</a>
            <a class="nav-item nav-link" href="<%= new_emission_path %>">Add Emission Data</a>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container"  id="flash" role="main">
     <% flash.each do |key, value| %>
       <div class="alert alert-<%= key %>"><%= value %></div>
     <% end %>
    </div>

    <div class="container" id="app-container">
      <%= yield %>
    </div>

    <!-- Optional JavaScript -->
    <script type="text/javascript" charset="utf-8">
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
  </body>
</html>
